{
  "manifest_version": 3,
  "name": "Social Media Time Warden",
  "description": "Track and manage your social media usage across platforms",
  "version": "1.0.0",
  "permissions": [
    "activeTab",
    "tabs",
    "storage",
    "alarms",
    "notifications",
    "scripting"
  ],
  "host_permissions": [
    "*://twitter.com/*",
    "*://x.com/*",
    "*://facebook.com/*",
    "*://www.facebook.com/*",
    "*://instagram.com/*",
    "*://www.instagram.com/*",
    "*://tiktok.com/*",
    "*://www.tiktok.com/*",
    "*://youtube.com/*",
    "*://www.youtube.com/*",
    "*://snapchat.com/*",
    "*://www.snapchat.com/*",
    "http://localhost:3002/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "*://twitter.com/*",
        "*://x.com/*", 
        "*://facebook.com/*",
        "*://www.facebook.com/*",
        "*://instagram.com/*",
        "*://www.instagram.com/*",
        "*://tiktok.com/*",
        "*://www.tiktok.com/*",
        "*://youtube.com/*",
        "*://www.youtube.com/*",
        "*://snapchat.com/*",
        "*://www.snapchat.com/*"
      ],
      "js": ["content-script.js"],
      "run_at": "document_idle"
    },
    {
      "matches": ["http://localhost:3000/*"],
      "js": ["web-bridge.js"],
      "run_at": "document_start"
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Social Media Time Warden"
  },
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png", 
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
